<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Bookname</th>
      <th>Author</th>
      <th>Press</th>
      <th>Isbn</th>
      <th>User</th>
      <th>Borrower</th>
      <th>Explanation</th>
      <th>Status</th>
      <th>Booktype</th>
      <th>Extend</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.bookname %></td>
        <td><%= book.author %></td>
        <td><%= book.press %></td>
        <td><%= book.isbn %></td>
        <td><%= book.user %></td>
        <td><%= book.borrower %></td>
        <td><%= book.explanation %></td>
        <td><%= book.status %></td>
        <td><%= book.booktype %></td>
        <td><%= book.extend %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

