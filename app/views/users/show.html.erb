<% provide(:title, @user.name) %>
<div class="row">
<aside class="col-md-4">
<section class="user_info">
<h1>
<%= gravatar_for @user %>
<%= @user.name %>
</h1>
</section>
</aside>
<div class="col-md-8">
<% if @user.books.any? %>

<%  @publish=@books.where(status:"图书未借出") %>
<h3>用户已发布图书，总共(<%= @publish.count %>)本</h3>
<ol class="books">
<%= render @publish %> 
</ol>
<%  @wantborrow=@books.where(status:"发布信息中") %>
<h3>用户已求借图书，总共(<%= @wantborrow.count %>)</h3>
<ol class="books">
<%= render @wantborrow %> 
</ol>
<%= will_paginate @books %>
<% end %>
</div>
</div>
