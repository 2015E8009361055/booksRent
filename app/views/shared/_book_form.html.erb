<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <div class="row">
<div class="col-md-6 col-md-offset-3">
   <%=form_for(@book) do |f| %>
   
   
    <%=f .label "书  名" %>
     <%=f .text_field :bookname %>
      <%=f .label "作  者" %>
       <%=f .text_field :author %>
        <%=f .label "出版社" %>
         <%=f .text_field :press %>
          <%=f .label "类型" %>
           <%=f .select(:booktype, [[ '计算机类', "计算机类"],[ '文学类', "文学类"],[ '历史类', "历史类"], [ '小说类', "小说类"]] )%>
            <%=f .label "图书ISBN" %>
             <%=f .text_field :isbn %>
              <%=f .label "推荐语" %>
               <div class=" field" style="height:100px;margin-top:10px">
                <%=f.text_area :explanation ,placeholder: "您可以在此编辑推荐语..."%>
               </div>
               <%=f .submit "提交信息", class: "btn btn-primary" %>
                <% end %>
  </div>
  <div class="col-md-2" style="background-color: #dedef8;height:150px;margin-top:2px">
   这里用来上传封面图片
