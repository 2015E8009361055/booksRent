   <%=link_to image_tag( "rails.png", alt: "Rails logo"), 'http://rubyonrails.org/'%>
     <a href="http://gravatar.com/emails" target="_blank">上传封面</a>
    </div>
  </div>
  
 </div>

<% end %>






